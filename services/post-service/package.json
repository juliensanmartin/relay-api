{
  "name": "@relay/post-service",
  "version": "1.0.0",
  "description": "Handles user authentication and management.",
  "main": "src/index.ts",
  "type": "commonjs",
  "scripts": {
    "start": "ts-node --require ./node_modules/@relay/tracing/dist/index.js --transpile-only src/index.ts",
    "dev": "SERVICE_NAME=post-service nodemon --exec 'ts-node --require ./node_modules/@relay/tracing/dist/index.js' src/index.ts | pino-pretty",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --testPathPattern=\\.unit\\.test\\.ts$",
    "test:integration": "vitest run --testPathPattern=\\.integration\\.test\\.ts$",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@relay/cache": "workspace:^",
    "@relay/tracing": "workspace:^",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "pino": "^9.12.0",
    "pino-http": "^10.5.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.0.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^2.0.0"
  }
}
