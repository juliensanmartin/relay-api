{
  "name": "@relay/api-gateway",
  "version": "1.0.0",
  "description": "Handles user authentication and management.",
  "main": "src/index.ts",
  "type": "commonjs",
  "scripts": {
    "start": "ts-node --require ./node_modules/@relay/tracing/dist/index.js --transpile-only src/index.ts",
    "dev": "SERVICE_NAME=api-gateway nodemon --exec 'ts-node --require ./node_modules/@relay/tracing/dist/index.js' src/index.ts | pino-pretty",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --testPathPattern=\\.unit\\.test\\.ts$",
    "test:integration": "vitest run --testPathPattern=\\.integration\\.test\\.ts$",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@relay/tracing": "workspace:^",
    "axios": "^1.12.2",
    "axios-retry": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^9.0.0",
    "pino": "^9.12.0",
    "pino-http": "^10.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.0.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^2.0.0"
  }
}
