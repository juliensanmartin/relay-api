{
  "name": "@relay/notification-service",
  "version": "1.0.0",
  "description": "Handles sending notifications like emails.",
  "main": "src/index.ts",
  "type": "commonjs",
  "scripts": {
    "start": "ts-node --require ./node_modules/@relay/tracing/dist/index.js --transpile-only src/index.ts",
