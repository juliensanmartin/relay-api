    "pino": "^8.16.0",
    "pino-http": "^8.5.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/express": "^4.17.17",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
